# Global settings for Overpass logs
compress
nomail
missingok
notifempty

# Overpass script logs in one place
/var/lib/overpass/logs/*.log {
    su overpass overpass
    rotate 5
    size 300K
    compress
    notifempty
    missingok
}

# getdiff log (different directory)
/var/lib/overpass/getdiff/getdiff.log {
    su overpass overpass
    rotate 5
    size 300K
    compress
    notifempty
    missingok
}

# Overpass database logs
/var/lib/overpass/database/transactions.log \
/var/lib/overpass/database/database.log {
    su overpass overpass
    rotate 5
    size 500K
}

# httpd-overpass logs (modified original Slackware httpd log rotation:
# you may not want this for ALL your files?!)
/var/log/httpd/*_log {
#  rotate 10
    rotate 5
    notifempty
    missingok
#    size 5M
    size 300K
    compress
    delaycompress
    sharedscripts
    postrotate
        /etc/rc.d/rc.httpd restart
    endscript
}
